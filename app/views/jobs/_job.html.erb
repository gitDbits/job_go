<h1><%= job.title %></h1>
<hr>
  <p><%= job.category.name %></p>
  <p><%= job.company.name %></p>
  <p><%= job.location %></p>
  <p><%= job.description %></p>
<% if job.featured? %>
  <p><strong>Destaque</strong></p>
<% end %>
<% if job.expired? %>
  <p>Vaga Expirada</p>
<% end %>
<%= link_to job.title, job %>

