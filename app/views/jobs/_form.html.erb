<%= form_for @job do |f| %>
  <div class="form-group">
    <%= f.label :title, "Título:" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :location, "Local:" %>
    <%= f.text_field :location %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Categoria:" %>
    <%= f.collection_select :category_id, 
      @categories, :id, :name %>
      <a <%= link_to 'Nova Categoria', new_category_path %></a>
  </div>  
  <div class="form-group">  
    <%= f.label :company_id, "Empresa" %>
    <%= f.collection_select :company_id, 
      @companies, :id, :name %>
      <a <%= link_to 'Nova Empresa', new_company_path %></a>
  </div>  
  <div class="form-group">  
    <%= f.label :description, "Descrição:" %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :featured, "Destaque" %>
    <%= f.check_box :featured %>
  </div>
  <%= f.submit submit_button %>
<% end %>