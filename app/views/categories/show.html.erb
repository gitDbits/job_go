<% if @category.jobs.exists?  %>

  <h3>Lista de vagas <strong><%= @category.name %></strong></h3>
    <div class="row">
      <%= render(@category.jobs) %>
    </div>

    <div class="row col-md-6 mb-3" align="center">
      <%= link_to root_path, class: "btn btn-primary" do %>
        <i class="fa fa-arrow-left"></i>
        VOLTAR
      <% end %>
    </div>
<% else %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <i class="far fa-frown"></i> Categoria <strong><%= @category.name %></strong> n√£o possui vagas.
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <%= link_to new_job_path, class: "btn btn-success" do %>
    <i class="fa fa-plus"></i>
    Criar vaga
  <% end %><br><br>

  <div class="row col-md-6 mb-3" align="center">
    <%= link_to root_path, class: "btn btn-primary" do %>
      <i class="fa fa-arrow-left"></i>
      VOLTAR
    <% end %>
  </div>
<% end %>
